# Larawed general patch
# "Hashtag" is comment
# Exclamation mark is file to patch, if you want to have ! on line start use \
!.htaccess
<IfModule mod_rewrite.c>
RewriteEngine On
RewriteRule (.*)$ public/$1 [L]
</IfModule>

!public/.htaccess
RewriteEngine On
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^(.*[^/])$ /$1/ [L,R=301]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^ /index.php [L]
